<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Space
        android:id="@+id/center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <Space
        android:id="@+id/TopCenter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:layout_alignTop="@id/Button4" />

    <Space
        android:id="@+id/BottomCenter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:layout_alignBottom="@id/Button5" />

    <Space
        android:id="@+id/Beginning"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:layout_alignTop="@id/Button3" />

    <Space
        android:id="@+id/End"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:layout_alignBottom="@id/Button6" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/Beginning"
        android:text="1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/Button4"
        android:layout_alignTop="@id/Beginning"
        android:layout_alignBottom="@id/End"
        android:text="2"/>

    <Button
        android:id="@+id/Button3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/TopCenter"
        android:layout_alignBottom="@id/TopCenter"
        android:text="3"/>

    <Button
        android:id="@+id/Button4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toLeftOf="@id/center"
        android:layout_alignBottom="@id/center"
        android:text="4"/>

    <Button
        android:id="@+id/Button5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/center"
        android:layout_alignTop="@id/center"
        android:text="5"/>

    <Button
        android:id="@+id/Button6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toStartOf="@id/center"
        android:layout_alignTop="@id/BottomCenter"
        android:text="6"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/Button5"
        android:layout_alignTop="@id/Beginning"
        android:layout_alignBottom="@id/End"
        android:text="2"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/End"
        android:text="8"/>



</RelativeLayout>